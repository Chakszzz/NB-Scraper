{
  "compilerOptions": {
    "target": "ES2021",
    "lib": ["ES2021"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "rootDir": "./app",
    "composite": true
  },
  "include": ["app/**/*"],
  "exclude": ["node_modules", "dist"]
}